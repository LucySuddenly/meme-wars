<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<h1><%= @user.username %></h1>
<h2><%= @user.display_name %></h2>
<h4><%= @user.location %></h4>
<p><%= @user.bio %></p>
<div class="avatar">
  <%= image_tag @user.avatar.url(:medium)%>
</div>

<% if @current_user == @user.id %>
<%= button_to "Edit User", edit_user_path(@user), :method => "get" %>
<% end %>

<% if @current_user %>
<%= render 'reports/report_button' %>
<% end %>

<div class="posts_container">
<ul>
<% @posts.each do |p| %>
  <li><div class="post"><%= p.title %>
  <small>Uploaded: <%= time_ago_in_words(p.created_at) %> ago</small><br>
  <%= link_to image_tag(p.image.url), post_path(p) %></div></li>
  Likes: <%= p.likes.count %>
<% end %>
</ul>
</div>
