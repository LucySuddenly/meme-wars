<%= form_for @user, html: {multipart: true} do |f| %>
<div class="field">
<%= f.label :display_name %>
<%= f.text_field :display_name %>
</div>
<div class="field">
<%= f.label :location %>
<%= f.text_field :location %>
</div>
<div class="field">
  <%= f.label :bio %>
  <%= f.text_field :bio %>
</div>
<div class="field">
<%= f.label :password_digest %>
<%= f.password_field :password_digest %>
</div>
<div class="field">
<%= f.label :avatar %>
<%= f.file_field :avatar %>
</div>
<%= f.submit %>
<% end %>
